@using IflDiary.Models;
@model List<Demand>;
<div class="card">
	<div class="card-header">
		<h3>Demand List [<a href="/Engineer/AddUpdateDemand">Add Demand Details</a>]</h3>
	</div>
	<div class="card-body">
		<table class="table table-bordered table-hover table-striped">
			<thead>
				
				<tr>
					<th>Date</th>
					<th>Demand No.</th>
					<th>Category</th>
					<th>Generate By</th>
					<th>Purcahser</th>
					<th>Required</th>
					<th>Received Date</th>
					<th>Actions</th>
				</tr>
			</thead>
			@foreach (Demand demand in Model)
			{
				<tbody>
					<tr>
					
						<td>@demand.CreatedOn.ToString("dd-MMM-yy")</td>
						<td>@demand.DemandNumber</td>
						<td>@demand.Category</td>
						<td>@demand.Creater</td>
						<td>@demand.Purchaser.Name</td>
						<td>@demand.Required</td>
						<td>@demand.ReceivedOn.ToString("dd-MMM-yy")</td>
						<td>
							<a href="/Engineer/AddUpdateDemand/@demand.Id">Edit |</a>
							<a href="/Engineer/DeleteDemand/@demand.Id">Delete</a>
						</td>
					</tr>
				</tbody>
			}
		</table>
	</div>
</div>