@using IflDiary.Models;
@model List<Diary>;
<div class="card">
	<div class="card-header">
		<h3>Diary List [<a href="/Engineer/AddUpdateDiary">Add diary Details</a>]</h3>
	</div>
	<div class="card-body">
		<table class="table table-bordered table-hover table-striped">
			<thead>

				<tr>
					<th>Date</th>
					<th>Activity No.</th>
					<th>Assigned Dept</th>
					<th>Description</th>
					<th>Feedback</th>
					<th>Actions</th>
				</tr>
			</thead>
			@foreach (Diary diary in Model)
			{
				<tbody>
					<tr>

						<td>@diary.CreatedOn.ToString("dd-MMM-yy")</td>
						<td>@diary.ActivityNumber</td>
						<td>@diary.Department.Name</td>
						<td>@diary.Description</td>
						<td>@diary.FeedbackOn.ToString("dd-MMM-yy")</td>
						<td>
							<a href="/Engineer/AddUpdateDiary/@diary.Id">Edit |</a>
							<a href="/Engineer/DeleteDiary/@diary.Id">Delete</a>
						</td>
					</tr>
				</tbody>
			}
		</table>
	</div>
</div>
