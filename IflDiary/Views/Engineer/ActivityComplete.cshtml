@using IflDiary.Models;
@model List<Diary>;
<div class="card">
	<div class="card-header">
		<h3 class="text-center">Complete Diary List </h3>
	</div>
	<div class="card-body">
		<table class="table table-bordered table-hover table-striped">
			<thead>

				<tr>
					<th>Date</th>
					<th>Activity No.</th>
					<th>Assigned Dept</th>
					<th>Description</th>
					<th>Complete Date</th>
					<th>Status</th>
					<th>Actions</th>
				</tr>
			</thead>
			@foreach (Diary diary in Model)
			{
				<tbody>
					<tr>

						<td>@diary.CreatedOn.ToString("dd-MMM-yy")</td>
						<td>@diary.ActivityNumber</td>
						<td>@diary.Department.Name</td>
						<td>@diary.Description</td>
						<td>@diary.CompleteOn.ToString("dd-MMM-yy")</td>
						<td>@diary.Status</td>
						<td>
							<a href="/Engineer/DeleteCDiary/@diary.Id">Delete Data</a>
						<td>
					</tr>
				</tbody>
			}
		</table>
	</div>
</div>